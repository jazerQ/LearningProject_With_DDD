{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
    "AllowedHosts": "*",
    "AuthorizationOptions": {
        "PermissionRole": [
            {
                "Role": "Admin",
                "Permissions": [ "Create", "Read", "Update", "Delete", "JoinToCourse" ]
            },
            {
                "Role": "User",
                "Permissions": ["Read", "JoinToCourse"]
            }
        ]
    }
}
